{
  "name": "sigmaker",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "buildprod": "vite build --base=/sigmaker/",
    "buildtest": "vite build --base=/test/",
    "backupprod": "ssh squidward \"tar jcvf /var/backups/sigmaker/sigmaker-`date +%Y%m%d-%H%M%S`.tbz /srv/caddy/site/files.ink.fish/sigmaker\"",
    "deploy2prod": "pnpm buildprod && pnpm backupprod && rsync -av --delete --exclude .DS_Store dist/ squidward:/srv/caddy/site/files.ink.fish/sigmaker/",
    "deploy2test": "pnpm buildtest && rsync -av --delete --exclude .DS_Store dist/ squidward:/srv/caddy/site/files.ink.fish/test/",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.4.0",
    "eslint": "^8.36.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "prettier": "^2.8.4",
    "prettier-plugin-svelte": "^2.9.0",
    "svelte": "^3.57.0",
    "vite": "^3.2.5"
  }
}
